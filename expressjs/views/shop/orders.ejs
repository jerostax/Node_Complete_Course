<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length <= 0) { %>
                <h1>No Order!</h1>
            <% } else { %>
                <ul class="orders"> 
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>#<%= order._id %> - <a href='/orders/<%= order._id %>'>Invoice</a></h1>
                            <ul class="orders__products">
                                <!-- products correspond à la liste des produits contenu dans le tableau de l'order (qu'on a include dans la méthode getOrder() du controller shop.js-->
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>
